<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plplbproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Vue.mainMenu.MainMenuActivity" />
        <activity android:name=".Vue.creationMenu.CreationMenuActivity"/>
        <activity android:name=".Vue.previewParcour.PreviewActivity" />
        <activity
            android:name=".Vue.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Vue.courseBuilder.CourseBuilderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>