<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@drawable/green_rect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/oldnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ancien nom : "
            android:gravity="right"
            android:textSize="22dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/oldname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oldname"
            android:textSize="22dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:id="@+id/newNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Nouveau nom : "
        android:gravity="center"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/newNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:hint="Nouveau nom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <Button
            android:id="@+id/confirmRenameBoutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Confirmer"
            android:gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/cancelRenameBoutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Annuler"
            android:gravity="center"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>