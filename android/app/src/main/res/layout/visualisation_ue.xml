<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="100dp">


        <TextView
            android:id="@+id/nameUEVisu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#62B96B"
            android:gravity="center"
            android:text="nameUE"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/inputborder"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codeConstante"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CFF3D1"
                android:gravity="center"
                android:text="Code :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codeUEVisu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="codeUE"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputborder"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryConstant"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CFF3D1"
                android:gravity="center"
                android:text="CatÃ©gorie : "
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryUEVisu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="categoryUE"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/descriptionConstant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="#62B96B"
            android:gravity="center"
            android:text="Description : "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/descriptionUEVisu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="descriptionUE"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/exitVisualisation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-55dp"
        android:backgroundTint="#62B96B"
        android:text="Quitter"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>